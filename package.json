{
  "name": "strathub",
  "version": "1.0.0",
  "private": true,
  "description": "Tactical strategy planning for competitive games",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @strathub/server dev\" \"pnpm --filter @strathub/client dev\"",
    "build": "pnpm --filter @strathub/shared build && pnpm --filter @strathub/server build && pnpm --filter @strathub/client build",
    "db:generate": "pnpm --filter @strathub/server db:generate",
    "db:migrate": "pnpm --filter @strathub/server db:migrate",
    "db:seed": "pnpm --filter @strathub/server db:seed",
    "db:studio": "pnpm --filter @strathub/server db:studio"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "sharp",
      "esbuild"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.7.3"
  }
}
