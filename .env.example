# Database
DATABASE_URL=postgresql://tactihub:tactihub@localhost:5432/tactihub

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=3001
NODE_ENV=development

# Public URL -used in email links (verify, reset password) and logo URLs in emails.
# Set to your public domain in production (e.g. https://tactihub.de)
# In development, this should point to the Vite dev server (port 5173), NOT the API (port 3001).
APP_URL=http://localhost:5173

# JWT -generate with: openssl rand -base64 48
JWT_SECRET=change-me-to-a-random-string
JWT_REFRESH_SECRET=change-me-to-another-random-string

# SMTP (Email)
# Required for email verification, password reset, and admin notifications.
# Without SMTP, admins must manually verify every user in the admin panel.
# Port 465 = SSL  ->SMTP_SECURE=true
# Port 587 = STARTTLS ->SMTP_SECURE=false
# Gmail: SMTP_HOST=smtp.gmail.com, SMTP_PORT=587, SMTP_SECURE=false, use App Password
# Brevo: SMTP_HOST=smtp-relay.brevo.com, SMTP_PORT=587, SMTP_SECURE=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM=noreply@yourdomain.com

# Uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# reCAPTCHA v2 (optional -if not set, registration works without CAPTCHA)
# Get keys from: https://www.google.com/recaptcha/admin
# 1. Choose "Challenge (v2)" / "Aufgabe (v2)"
# 2. Choose "I'm not a robot Checkbox" / "Kaestchen: Ich bin kein Roboter"
# The SITE_KEY is used by the server to tell the client, and the SECRET_KEY verifies on the server.
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Client -set to your server's public URL in production
VITE_API_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001
