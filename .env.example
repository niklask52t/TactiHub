# Database
DATABASE_URL=postgresql://tactihub:tactihub@localhost:5432/tactihub

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=3001
NODE_ENV=development

# JWT — generate with: openssl rand -base64 48
JWT_SECRET=change-me-to-a-random-string
JWT_REFRESH_SECRET=change-me-to-another-random-string

# SMTP (Email)
# Required for email verification, password reset, and admin notifications.
# Port 465 = SSL  → SMTP_SECURE=true
# Port 587 = STARTTLS → SMTP_SECURE=false
# Gmail: SMTP_HOST=smtp.gmail.com, SMTP_PORT=587, SMTP_SECURE=false, use App Password
# Brevo: SMTP_HOST=smtp-relay.brevo.com, SMTP_PORT=587, SMTP_SECURE=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM=noreply@yourdomain.com

# Uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Client — set to your server's public URL in production
VITE_API_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001
